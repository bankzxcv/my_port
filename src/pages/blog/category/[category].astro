---
import Layout from '../../../layouts/Layout.astro';
import BlogCard from '../../../components/blog/BlogCard.astro';
import { getPostsByCategory, getCategoryBySlug, getAllCategories } from '../../../lib/blogUtils';

export async function getStaticPaths() {
  const categories = getAllCategories();
  return categories.map(category => ({
    params: { category: category.slug },
    props: { category }
  }));
}

const { category } = Astro.props;
const posts = getPostsByCategory(category.name);
---

<Layout title={`${category.name} - Blog`}>
  <div class="py-12">
    <header class="text-center mb-12" data-aos="fade-down">
      <div class="inline-block px-6 py-2 rounded-full text-white font-semibold mb-4" style={`background-color: ${category.color}`}>
        {category.name}
      </div>
      <h1 class="text-4xl font-bold mb-4">{category.name}</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">{category.description}</p>
      <p class="text-gray-500 mt-2">{posts.length} {posts.length === 1 ? 'post' : 'posts'}</p>
    </header>

    <div class="max-w-5xl mx-auto">
      {posts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          {posts.map(post => (
            <BlogCard post={post} />
          ))}
        </div>
      ) : (
        <div class="bg-white/80 backdrop-blur-sm rounded-xl p-12 text-center">
          <p class="text-gray-600 text-lg">No posts in this category yet.</p>
        </div>
      )}

      <div class="text-center mt-8">
        <a
          href="/blog"
          class="text-blue-600 hover:text-blue-800 font-medium"
        >
          ‚Üê Back to all posts
        </a>
      </div>
    </div>
  </div>
</Layout>
