---
import Layout from '../../../layouts/Layout.astro';
import BlogCard from '../../../components/blog/BlogCard.astro';
import { getPostsByTag, getAllTags } from '../../../lib/blogUtils';

export async function getStaticPaths() {
  const tags = getAllTags();
  return tags.map(tag => ({
    params: { tag: tag.name.toLowerCase() },
    props: { tag: tag.name, count: tag.count }
  }));
}

const { tag, count } = Astro.props;
const posts = getPostsByTag(tag);
---

<Layout title={`#${tag} - Blog`}>
  <div class="py-12">
    <header class="text-center mb-12" data-aos="fade-down">
      <div class="inline-block px-6 py-2 rounded-full bg-blue-100 text-blue-700 font-semibold mb-4">
        #{tag}
      </div>
      <h1 class="text-4xl font-bold mb-4">Posts tagged with "{tag}"</h1>
      <p class="text-gray-600">{count} {count === 1 ? 'post' : 'posts'}</p>
    </header>

    <div class="max-w-5xl mx-auto">
      {posts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          {posts.map(post => (
            <BlogCard post={post} />
          ))}
        </div>
      ) : (
        <div class="bg-white/80 backdrop-blur-sm rounded-xl p-12 text-center">
          <p class="text-gray-600 text-lg">No posts with this tag.</p>
        </div>
      )}

      <div class="text-center mt-8">
        <a
          href="/blog"
          class="text-blue-600 hover:text-blue-800 font-medium"
        >
          ‚Üê Back to all posts
        </a>
      </div>
    </div>
  </div>
</Layout>
