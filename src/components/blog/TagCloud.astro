---
import { getAllTags } from '../../lib/blogUtils';

const tags = getAllTags();
---

<div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-lg">
  <h3 class="text-xl font-bold mb-4">Popular Tags</h3>
  <div class="flex flex-wrap gap-2">
    {tags.map(tag => (
      <a
        href={`/blog/tag/${tag.name.toLowerCase()}`}
        class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm hover:bg-blue-200 transition-colors"
      >
        {tag.name} ({tag.count})
      </a>
    ))}
  </div>
</div>
