---
interface Props {
    imagePath: string;
    alt: string;
}

const { imagePath, alt } = Astro.props;
---

<div class="relative my-16 flex justify-center" data-aos="fade-up">
    <!-- Decorative elements -->
    <div class="absolute -z-10 w-72 h-72 bg-gradient-to-r from-blue-100 to-indigo-100 rounded-full blur-3xl opacity-70 animate-pulse"></div>
    <div class="absolute -z-10 w-64 h-64 bg-gradient-to-r from-indigo-100 to-purple-100 rounded-full blur-3xl opacity-70 animate-pulse" style="animation-delay: 1s;"></div>
    
    <!-- Image container -->
    <div class="relative group">
        <!-- Main image with border effect -->
        <div class="relative z-10 w-64 h-64 rounded-full overflow-hidden border-4 border-white shadow-xl transition-transform duration-300 group-hover:scale-105">
            <img
                src={imagePath}
                alt={alt}
                class="w-full h-full object-cover"
                loading="eager"
            />
        </div>

        <!-- Decorative rings -->
        <div class="absolute inset-0 -z-10 w-64 h-64 rounded-full border-8 border-blue-100/50 transition-transform duration-300 group-hover:scale-110" style="transform: rotate(-5deg);"></div>
        <div class="absolute inset-0 -z-10 w-64 h-64 rounded-full border-8 border-indigo-100/50 transition-transform duration-300 group-hover:scale-110" style="transform: rotate(5deg);"></div>

        <!-- Floating dots -->
        <div class="absolute top-0 left-0 w-4 h-4 rounded-full bg-blue-400/30 blur-sm animate-float"></div>
        <div class="absolute bottom-8 right-0 w-3 h-3 rounded-full bg-indigo-400/30 blur-sm animate-float" style="animation-delay: 1s;"></div>
        <div class="absolute top-8 right-0 w-2 h-2 rounded-full bg-purple-400/30 blur-sm animate-float" style="animation-delay: 2s;"></div>
    </div>
</div>

<style>
    @keyframes float {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }

    .animate-float {
        animation: float 3s ease-in-out infinite;
    }
</style>
